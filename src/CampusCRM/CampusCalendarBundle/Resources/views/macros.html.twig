{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{# Button for add attendance on the activity list item view page ,
                activity: oro_class_name(entity, true)#}

{% macro addAttendanceButton(entity, parameters) -%}

    {% if resource_granted('EDIT', entity) %}
        {% import 'OroUIBundle::macros.html.twig' as UI %}
        {{ UI.clientButton({
            'dataUrl': path(
            'oro_calendar_event_attendance', {
                id:    entity.id
            }),
            'aCss': 'no-hash',
            'iCss': 'fa-link hide-text',
            'dataId': entity.id,
            'label' : 'oro.activity.contexts.add_attendance.label'|trans,
            'widget' : {
                'type' : 'dialog',
                'multiple' : true,
                'refresh-widget-alias': 'activity-list-widget',
                'options' : {
                    'alias': 'activity-attendance-dialog',
                    'dialogOptions' : {
                        'title' : 'oro.activity.contexts.add_attendance.label'|trans,
                        'allowMaximize': true,
                        'allowMinimize': true,
                        'modal': true,
                        'dblclick': 'maximize',
                        'maximizedHeightDecreaseBy': 'minimize-bar',
                        'width': 1000,
                        'height': 600
                    }
                }
            }
        }) }}
    {% endif %}
{% endmacro %}